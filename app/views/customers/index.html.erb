<table>
  <tr>
    <th>Customer Name</th>
    <th>Customer Address</th>
  </tr>
  <%@customers.each do |customer|%>
  <tr>
    <td><%= link_to customer.name, customer %></td>
    <td><%= link_to customer.address, customer %></td>
    <% if customer.user == current_user %>
    <td><%= link_to "Update", edit_customer_path(customer)%></td>
    <td><%= link_to "Delete", customer, method: :delete, data: { confirm: "Are you sure you want to delete #{customer.name} ?" }%></td>
    <%end%>
  </tr>
  <%end%>
